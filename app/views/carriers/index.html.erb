<h1>Veículos Cadastrados</h1>
<hr/>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <div>
      <%= link_to 'Cadastrar Novo Veículo', new_carrier_path %>
    </div>
  <% end %>
<% end %>
<div>
  <%= form_with(url: search_carriers_path, method: :get) do |f| %>
    <%= f.label :query, 'Buscar Veículo' %>
    <%= f.text_field :query %>
    <%= f.submit 'Buscar' %>
  <% end %>
</div>
<div>
  <% if @carriers.any? %>
    <% @carriers.each do |carrier| %>
      <div>
        <dl>
          <dt><%= link_to carrier.transport_model.name, carrier %> </dt>
          <dd><%= carrier.drivers_name %> - <%= carrier.vehicle_model %> - <%= carrier.nameplate %> </dd>
          <dd><%= Carrier.human_attribute_name("status.#{carrier.status}") %> </dd>
        </dl>
      </div>
    <% end %>
  <% else %>
    <p>Nenhum Veículo Cadastrado.</p>
  <% end %>
</div>
