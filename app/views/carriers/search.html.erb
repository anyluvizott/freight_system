<h1> Resultado da Buscar por: <%= @query %> </h1>
<% @carriers.each do |carrier| %>
  <div>
    <h2><%= carrier.transport_model.name %></h2>
    <dl>
      <dt>Nome do Motorista:</dt>
      <dd><%= carrier.drivers_name %></dd>
      <dt>Placa de Identificação:</dt>
      <dd><%= carrier.nameplate %></dd>
      <dt>Modelo do Veículo:</dt>
      <dd><%= carrier.vehicle_model %></dd>
      <dt>Marca do Veículo:</dt>
      <dd><%= carrier.vehicle_brand %></dd>
      <dt>Ano de Fabricação:</dt>
      <dd><%= carrier.year_of_manufacture %></dd>
      <dt>Peso Máximo da Carga:</dt>
      <dd><%= carrier.maximum_weight %>kg</dd>
      <h3>
        <dt>Status:</dt>
      </h3>
      <h4>
        <dd><%= Carrier.human_attribute_name("status.#{carrier.status}") %></dd>
      </h4>
    </dl>
  </div>
<% end %>
