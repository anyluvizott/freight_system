<hr/>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <div>
      <%= link_to 'Editar Veículo', edit_carrier_path(@carrier), :class=>"link-dark"%>
    </div>
  <% end %>
<% end %>
<h1><%= @carrier.transport_model.name %></h1>
<dl>
  <dt>Nome do Motorista:</dt>
  <dd><%= @carrier.drivers_name %></dd>
  <dt>Placa de Identificação:</dt>
  <dd><%= @carrier.nameplate %></dd>
  <dt>Modelo do Veículo:</dt>
  <dd><%= @carrier.vehicle_model %></dd>
  <dt>Marca do Veículo:</dt>
  <dd><%= @carrier.vehicle_brand %></dd>
  <dt>Ano de Fabricação:</dt>
  <dd><%= @carrier.year_of_manufacture %></dd>
  <dt>Peso Máximo da Carga:</dt>
  <dd><%= @carrier.maximum_weight %>kg</dd>
  <dt>Status:</dt>
  <dd><%= Carrier.human_attribute_name("status.#{@carrier.status}") %></dd>
</dl>
<div>
  <% if user_signed_in? %>
    <% if current_user.admin? %>
      <% if @carrier.active? %>
        <%= button_to 'Veículo em Manutenção', under_maintenance_carrier_path(@carrier), :class => "btn btn-outline-dark" %>
      <% end %>
      <% if @carrier.under_maintenance? %>
        <%= button_to 'Veículo Ativo', active_carrier_path(@carrier), :class => "btn btn-outline-dark" %>
      <% end %>
    <% end %>
  <% end %>
</div>
<br>
<div>
  <%= link_to 'Voltar', carriers_path, :class=>"link-dark" %>
</div>
