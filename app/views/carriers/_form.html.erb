<% if(@carrier.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @carrier.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with(model: @carrier) do |f| %>
  <div>
    <%= f.label :drivers_name %>
    <%= f.text_field :drivers_name %>
  </div>
  <div>
    <%= f.label :nameplate %>
    <%= f.text_field :nameplate %>
  </div>
  <div>
    <%= f.label :vehicle_model %>
    <%= f.text_field :vehicle_model %>
  </div>
  <div>
    <%= f.label :vehicle_brand %>
    <%= f.text_field :vehicle_brand %>
  </div>
  <div>
    <%= f.label :year_of_manufacture %>
    <%= f.number_field :year_of_manufacture %>
  </div>
  <div>
    <%= f.label :maximum_weight %>
    <%= f.number_field :maximum_weight %>
  </div>
  <div>
    <%= f.label :transport_model_id %>
    <%= f.collection_select :transport_model_id, @transport_models, :id, :name%>
  </div>
  <div>
    <%= f.submit 'Enviar', :class => "btn btn-outline-dark" %>
  </div>
<% end %>