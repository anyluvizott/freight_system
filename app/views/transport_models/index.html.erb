<h1>Modalidades de Transporte</h1>
<hr/>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <div>
      <%= link_to 'Cadastrar Nova Modalidade de Transporte', new_transport_model_path %>
    </div>
  <% end %>
<% end %>


<div>
  <% if @transport_models.any? %>
    <% @transport_models.each do |model| %>
      <div>
        <h2><%= link_to model.name, model %>
      </div>
      <% end %>
    <% else %>
      <p>Nenhuma Modalidade de Transporte Cadastrada.</p>
    <% end %>
</div>
