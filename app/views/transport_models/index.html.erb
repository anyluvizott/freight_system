<h1>Modalidades de Transporte</h1>
<hr/>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <div>
      <%= link_to 'Cadastrar Nova Modalidade de Transporte', new_transport_model_path, :class=>"link-dark"%>
      <br>
    </div>
  <% end %>
<% end %>

<div>
  <% if @transport_models.any? %>
    <% @transport_models.each do |model| %>
      <div>
        <h3><%= link_to model.name, model, :class=>"link-dark" %></h3>
        <br>
      </div>
    <% end %>
  <% else %>
    <p>Nenhuma Modalidade de Transporte Cadastrada.</p>
  <% end %>
</div>

<%= link_to "Cadastrar Novo Tipo de Modalidade de Entrega", new_model_type_path, :class=>"link-dark" %>
