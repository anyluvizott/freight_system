
<h1>Cadastrar Nova Modalidade de Transporte</h1>


<% if(@transport_model.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @transport_model.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with(model: @transport_model) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :minimum_distance %>
    <%= f.number_field :minimum_distance %>
  </div>
  <div>
    <%= f.label :maximum_distance %>
    <%= f.number_field :maximum_distance %>
  </div>
  <div>
    <%= f.label :minimum_weight %>
    <%= f.number_field :minimum_weight %>
  </div>
  <div>
    <%= f.label :maximum_weight %>
    <%= f.number_field :maximum_weight %>
  </div>
  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>
